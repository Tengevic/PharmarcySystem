    ViewData["Title"] = "Details";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>PurchaseEntryVM</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.Purchase_ID)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.Purchase_ID)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.Discount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.Discount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.Discount_Amount)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.Discount_Amount)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.Grand_Total)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.Grand_Total)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.IsPaid)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.IsPaid)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.Entry_Date)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.Entry_Date)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PurchaseEntryVM.supplier)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PurchaseEntryVM.supplier.SupplierId)
        </dd>
        <dt>
            Purchase Items
        </dt>
        <dd class="col-sm-10">
             <table class="table">
                <thead>
                    <tr>
                        <th>
                            Batch_ID
                        </th>
                        <th>
                            Quantity
                        </th>
                        <th>
                            Cost_Price
                        </th>
                        <th>
                            Production_Date
                        </th>
                        <th>
                            Expire_Date
                        </th>
                        <th>
                            medicineInfo
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model.PurchaseEntryVM.PurchaseItems)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Batch_ID)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantity)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Cost_Price)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Production_Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Expire_Date)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.medicineInfo.MedicineName)
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </dd>
    </dl>
