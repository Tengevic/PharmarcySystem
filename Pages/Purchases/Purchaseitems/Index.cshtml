@page
@model PharmarcySystem.Pages.Purchaseitems.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Drug Purchase History</h1>


<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseItem[0].Batch_ID)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseItem[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseItem[0].Cost_Price)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseItem[0].Production_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseItem[0].Expire_Date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseItem[0].medicineInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PurchaseItem[0].purchaseEntryVM)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.PurchaseItem) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Batch_ID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost_Price)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Production_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Expire_Date)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medicineInfo.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.purchaseEntryVM.Purchase_ID)
            </td>
            <td>
               
                <a asp-page="./Details" asp-route-id="@item.ID">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
