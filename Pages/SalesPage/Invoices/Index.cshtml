@page
@model PharmarcySystem.Pages.SalesPage.Invoices.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-page="/SalesPage/NewSales/NewSales">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Invoice_No)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Total_Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Discount_Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Total_Payable)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Paid)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Returned)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Invoice[0].Date)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Invoice) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Invoice_No)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Discount_Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Total_Payable)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Paid)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Returned)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Date)
            </td>
            <td>
                <a asp-page="/SalesPage/NewSales/SalesItems" asp-route-id="@item.Invoice_No">Edit</a> |
                <a asp-page="./Details" asp-route-id="@item.Id">Details</a> |
                <a asp-page="./Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
