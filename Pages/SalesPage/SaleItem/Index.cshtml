@page
@model PharmarcySystem.Pages.SalesPage.SalaeItem.IndexModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Drug Sales History</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Cost)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].medicineInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sales[0].invoice)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Sales) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.medicineInfo.MedicineName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.invoice.Invoice_No)
            </td>
            <td>
                <a asp-page="./Details" asp-route-id="@item.SalesId">Details</a> 
            </td>
        </tr>
}
    </tbody>
</table>
