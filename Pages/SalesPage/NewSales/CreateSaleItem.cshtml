@model PharmarcySystem.Pages.SalesPage.NewSales.CreateSaleItemModel

@{
    ViewData["Title"] = "CreateSaleItem";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>CreateSaleItem</h1>

<h4>Sales</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
